<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springtest.phonemapper">
	<insert id="insert" parameterType="phone">
		insert into phones values (#{num}, #{model}, #{price}, #{vcode})
	</insert>
	
	<delete id="delete" parameterType="string">
		delete from phones where num = #{num}
	</delete>
	
	<update id="update" parameterType="phone">
		update phones set model=#{model}, price=#{price}, vcode=#{vcode} where num=#{num}
	</update>
	
	<select id="select" parameterType="string" resultType="phone">
		select * from phones
		<if test="value != null">
			where num = #{num}
		</if>
	</select>
</mapper>