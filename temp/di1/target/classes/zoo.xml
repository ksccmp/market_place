<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="tiger" class="zoo.Tiger">
		<constructor-arg value="타이거"></constructor-arg>
	</bean>
	<bean id="lion" class="zoo.Lion">
		<constructor-arg value="사자"></constructor-arg>
	</bean>
	<bean id="zoo" class="zoo.Zoo">
		<constructor-arg value="능동"></constructor-arg>
		<property name="tiger" ref="tiger"></property>
		<property name="lion" ref="lion"></property>
	</bean>
</beans>
