<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean: 빈을 정의, id는 빈의 이름 -->
	<bean id="hp" class="di1.HPPrinter"></bean>
	<bean id="ss" class="di1.SamsungPrinter"></bean>
	<bean id="user" class="di1.PrinterUser">
		<constructor-arg value="홍길동"></constructor-arg> <!-- 생성자 문자열 값 -->
		<property name="printer" ref="hp"></property> <!-- setter 빈 참조 -->
		<property name="age" value="10"></property> <!-- setter 숫자 값 -->
	</bean>
</beans>
