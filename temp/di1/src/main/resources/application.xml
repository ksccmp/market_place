<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean: 빈을 정의, id는 빈의 이름 -->
	<bean id="hp" class="di1.HPPrinter"></bean>
	<bean id="ss" class="di1.SamsungPrinter"></bean>
	<bean id="user" class="di1.PrinterUser"> <!-- 기본생성자 사용 -->
		<!-- constructor-arg: 생성자 호출 시 넘겨주는 파라미터, ref: 참조할 빈의 id -->
		<constructor-arg ref="ss"></constructor-arg>
	</bean>
</beans>
