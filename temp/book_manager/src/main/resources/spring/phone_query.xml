<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sql.bms">
	<select id="select" parameterType="string" resultType="book">
		select * from book
		<if test="isbn != null">
			where isbn = #{isbn}
		</if> 
	</select>
	
	<insert id="insert" parameterType="book">
		insert into book values (#{isbn}, #{title}, #{publisher}, #{price}, #{description}, #{authorno})
	</insert>
	
	<delete id="delete" parameterType="string">
		delete from book where isbn = #{isbn}
	</delete>
	
	<update id="update" parameterType="book">
		update book set title=#{title}, publisher=#{publisher}, price=#{price}, description=#{description}, authorno=#{authorno} where isbn = #{isbn}
	</update>
</mapper>






