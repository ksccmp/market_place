<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sql.pms">
	<insert id="restInsert" parameterType="phone">
		insert into phones values (#{num}, #{model}, #{price}, #{vcode})
	</insert>
	
	<select id="restSelect" parameterType="string" resultType="phone">
		select * from phones where num = #{num}
	</select>
	
	<select id="restSelectAll" resultMap="phoneDetail">
		select p.num, p.model, p.price, p.vcode, c.vcode, c.vendor from phones p join company c using(vcode)
		<if test="num != null">
			where num=#{num}
		</if>
	</select>
	
	<delete id="restDelete" parameterType="string">
		delete from phones where num = #{num}
	</delete>
	
	<update id="restUpdate" parameterType="phone">
		update phones set model = #{model} where num = #{num}
	</update>






	<select id="selectUser"	parameterType="userinfo" resultType="userinfo">
		select * from userinfo where id = #{id}
		<if test="pw != null">
			and pw = #{pw}
		</if>
	</select>

	<insert id="insert" parameterType="phone">
		insert into phones (num, model, price, vcode) values ( #{num},#{model},#{price},#{vcode} )
	</insert>
	
	<select id="select" parameterType="phone" resultMap="phoneDetail">
		select p.num, p.model, p.price, p.vcode, c.vcode, c.vendor from phones p join company c using(vcode)
		<if test="num != null">
			where num=#{num}
		</if>
	</select>
	
	<resultMap type="phone" id="phoneDetail">
		<id column="num" property="num"/>
		<result column="model" property="model"/>
		<result column="price" property="price"/>
		<result column="vcode" property="vcode"/>
		<association property="comp" javaType="company">
			<id column="vcode" property="vcode"/>
			<result column="vendor" property="vendor"/>
		</association>
	</resultMap>
	
	<delete id="delete" parameterType="list">
		delete from phones where num in 
		<foreach collection="list" open="(" close=")" separator="," item="num">
			#{num}
		</foreach>
	</delete>
</mapper>






