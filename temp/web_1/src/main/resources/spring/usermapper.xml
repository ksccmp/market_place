<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.model.UserMapper">
	<insert id="insert" parameterType="user">
		insert into user values(#{userid}, #{name}, #{pass}, #{balance})
	</insert>
	
	<select id="select" parameterType="user" resultType="user">
		select * from user where userid = #{userid}
		<if test="pass != null">
			 and pass = #{pass}
		</if>
	</select>
	
	<select id="selectAll" resultType="user">
		select * from user;
	</select>
	
	<select id="selectById" parameterType="string" resultType="user">
		select * from user where userid = #{userid}
	</select>
	
	<update id="update" parameterType="user">
		update user set name=#{name}, pass=#{pass}, balance=#{balance} where userid=#{userid}
	</update>
	
	<delete id="delete" parameterType="user">
		delete from user where userid = #{userid}
	</delete>
	
	<delete id="multiDel" parameterType="list">
		delete from user where userid in 
		<foreach item="item" index="index" collection="list" open="(" separator=", " close=")">
				#{item}
		</foreach>
	</delete>
</mapper>